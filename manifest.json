{
  "manifest_version": 3,
  "name": "Research Assistant",
  "version": "1.0",
  "description": "Context-aware research assistant powered by Gemini",
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
    
  ]
}
