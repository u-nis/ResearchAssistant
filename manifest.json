{
  "manifest_version": 3,
  "name": "Research Assistant",
  "version": "1.0",
  "description": "Context-aware research assistant powered by Gemini",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
